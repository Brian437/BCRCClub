<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <servlet>
        <servlet-name>BCRCDisplayBooksServlet</servlet-name>
        <servlet-class>club.admin.BCRCDisplayBooksServlet</servlet-class>
        <init-param>
            <param-name>getContextPath</param-name>
            <param-value>/WEB-INF/books.txt</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>BCRCAddBookServlet</servlet-name>
        <servlet-class>club.admin.BCRCAddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BCRCDeleteBookServlet</servlet-name>
        <servlet-class>club.admin.BCRCDeleteBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BCRCLoanServlet</servlet-name>
        <servlet-class>club.cart.BCRCLoanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BCRCCartServlet</servlet-name>
        <servlet-class>club.cart.BCRCCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BCRCClearCartServlet</servlet-name>
        <servlet-class>club.cart.BCRCClearCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BCDisplayMembersServlet</servlet-name>
        <servlet-class>club.member.BCDisplayMembersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BCAddMemberServlet</servlet-name>
        <servlet-class>club.member.BCAddMemberServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BCRCDisplayBooksServlet</servlet-name>
        <url-pattern>/BCRCDisplayBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCRCAddBookServlet</servlet-name>
        <url-pattern>/BCRCAddBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCRCDeleteBookServlet</servlet-name>
        <url-pattern>/BCRCDeleteBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCRCDeleteBookServlet</servlet-name>
        <url-pattern>/BCRCDeleteBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCRCLoanServlet</servlet-name>
        <url-pattern>/BCRCLoanServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCRCLoanServlet</servlet-name>
        <url-pattern>/BCRCLoan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCRCCartServlet</servlet-name>
        <url-pattern>/BCRCCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCRCClearCartServlet</servlet-name>
        <url-pattern>/BCRCClearCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCDisplayMembersServlet</servlet-name>
        <url-pattern>/BCDisplayMembers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BCAddMemberServlet</servlet-name>
        <url-pattern>/BCAddMember</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>BCRCIndex.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/BCError.jsp</location>
    </error-page>
</web-app>
